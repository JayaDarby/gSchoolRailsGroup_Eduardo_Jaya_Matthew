<h1>Edit dat shit</h1>


<%= form_for @food do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %><br />
    <%= f.radio_button :gluten_free, true %>
	<%= f.label :gluten_free_true, "Gluten-free" %><br />
	<%= f.radio_button :gluten_free, false %>
	<%= f.label :gluten_free_false, "Not gluten-free"%><br/>
	<%= f.radio_button :vegan, true %>
	<%= f.label :vegan_true, "Vegan" %><br />
	<%= f.radio_button :vegan, false %>
	<%= f.label :vegan_false, "Not vegan"%><br />
    <%= f.label "Image Url" %>
    <%= f.text_field :image_url %><br />
    <% if current_user.is_admin %>
    	<%= f.hidden_field :is_public, value: true%>
   	<% else %>
    	<%= f.hidden_field :is_public, value: false %>
    <% end %>
    <%= f.submit "Edit this Food!" %>
<% end %>