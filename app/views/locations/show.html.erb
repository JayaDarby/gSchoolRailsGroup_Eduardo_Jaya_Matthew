<h1 class="page-header"><%= @location.name %></h1>

<div class="row">
 <div class="col-sm-6 col-md-4">
     <%= image_tag(@location.image_url, class:"thumbnail profile_img") %>

 </div>

 <div class="caption col-sm-6 col-md-4 pull-right">
       <h3><%= @location.name %></h3>
       <h5>Address: <%= @location.address  %></h5>
       <h5>Phone: <%= @location.phone %></h5>
       <h5>Gluten Free: <%= @location.gluten_free %></h5>
       <h5>Vegan: <%= @location.vegan %></h5>

       <% if params[:user_id] %>
       <%= link_to "Edit", edit_location_path(@location), class:"btn btn-primary", id: "edit_location_path" %>
       <%= link_to "Explode", locations_path(@location), method: :delete, data:{alert:"are you sure?"} ,class:"btn btn-default" %>
       <% end %>
 </div>
</div>
